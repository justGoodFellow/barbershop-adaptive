{
  "name": "barbershop",
  "description": "Учебный проект - «Барбершоп» (адаптивный)",
  "homepage": "https://github.com/justGoodFellow/barbershop.git",
  "author": "Sergey Bodnaryuk <s.bodnaryuk@gmail.com>",
  "private": true,
  "engines": {
    "node": "14.19.0"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "pug-lint": "pug-lint pug/**/*.pug",
    "stylelint": "stylelint \"sass/**/*.scss\"",
    "eslint": "eslint js",
    "test": "npm run editorconfig && npm run pug-lint && npm run stylelint && npm run eslint",
    "build": "gulp",
    "start": "gulp && gulp serve"
  },
  "editorconfig-cli": [
    "*.js",
    "*.json",
    "pug/**/*.pug",
    "img/*.svg",
    "sass/**/*.scss",
    "js/*.js"
  ],
  "browserslist": [
    "> 0.5% in RU",
    "last 2 versions",
    "IE 11",
    "iOS >= 10.3",
    "not dead"
  ],
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "^1.0.0",
    "autoprefixer": "^10.4.2",
    "browser-sync": "^2.27.7",
    "css-mqpacker": "^7.0.0",
    "del": "^6.0.0",
    "eslint": "^8.10.0",
    "eslint-config-htmlacademy": "^5.0.0",
    "gulp": "^4.0.2",
    "gulp-concat": "^2.6.1",
    "gulp-csso": "^4.0.1",
    "gulp-imagemin": "^7.1.0",
    "gulp-minify": "^3.1.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^9.0.1",
    "gulp-pug": "^5.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-svgmin": "^4.1.0",
    "gulp-svgstore": "^9.0.0",
    "postcss": "^8.4.7",
    "postcss-object-fit-images": "^1.1.2",
    "pug-lint": "^2.6.0",
    "sass": "^1.49.9",
    "stylelint": "^14.5.3",
    "stylelint-config-standard-scss": "^3.0.0"
  },
  "dependencies": {}
}
