{
  "name": "barbershop",
  "description": "Учебный проект - Барбершоп (адаптивный)",
  "author": "Sergey Bodnaryuk <bodnaryuk_s.a@hotmail.com>",
  "homepage": "https://github.com/justGoodFellow/barbershop.git",
  "private": true,
  "engines": {
    "node": "8.15.2"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"sass/**/*.scss\" --syntax scss",
    "test": "npm run editorconfig && npm run stylelint",
    "build": "gulp",
    "start": "gulp && gulp serve"
  },
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "pug/**/*.pug",
    "img/*.svg",
    "sass/**/*.scss",
    "js/*.js"
  ],
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "^1.0.0",
    "autoprefixer": "^9.5.0",
    "browser-sync": "^2.26.3",
    "css-mqpacker": "^7.0.0",
    "del": "^4.0.0",
    "editorconfig-tools": "^0.1.1",
    "eslint": "^5.15.1",
    "eslint-config-htmlacademy": "^0.5.2",
    "gulp": "^4.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-csso": "^3.0.1",
    "gulp-imagemin": "^5.0.3",
    "gulp-minify": "^3.1.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^8.0.0",
    "gulp-pug": "^4.0.1",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^4.0.2",
    "gulp-svgmin": "^2.0.0",
    "gulp-svgstore": "^7.0.1",
    "postcss-object-fit-images": "^1.1.2",
    "stylelint": "^9.10.1",
    "stylelint-config-htmlacademy": "^0.1.1"
  }
}
