{
  "name": "barbershop-adaptive",
  "description": "Учебный проект - «Барбершоп» (адаптивный)",
  "homepage": "https://github.com/justGoodFellow/barbershop-adaptive",
  "author": "Sergey Bodnaryuk <s.bodnaryuk@gmail.com>",
  "private": true,
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "pug-lint": "pug-lint pug/**/*.pug",
    "stylelint": "stylelint \"sass/**/*.scss\"",
    "eslint": "eslint js",
    "prettier": "prettier -c **/*.{js,json,md,scss}",
    "test": "npm run editorconfig && npm run pug-lint && npm run stylelint && npm run eslint && npm run prettier",
    "build": "gulp",
    "start": "gulp && gulp server"
  },
  "editorconfig-cli": [
    "*.js",
    "*.json",
    ".*.json",
    "pug/**/*.pug",
    "img/**/*.svg",
    "sass/**/*.scss",
    "js/**/*.js"
  ],
  "browserslist": [
    "> 0.5% in RU",
    "last 2 versions",
    "not dead",
    "iOS >= 10.3"
  ],
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "^1.0.0",
    "autoprefixer": "^10.4.13",
    "browser-sync": "^2.27.10",
    "css-mqpacker": "^7.0.0",
    "del": "^6.1.1",
    "eslint": "^8.29.0",
    "eslint-config-htmlacademy": "^9.1.1",
    "gulp": "^4.0.2",
    "gulp-concat": "^2.6.1",
    "gulp-csso": "^4.0.1",
    "gulp-imagemin": "^7.1.0",
    "gulp-minify": "^3.1.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^9.0.1",
    "gulp-pug": "^5.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-svgmin": "^4.1.0",
    "gulp-svgstore": "^9.0.0",
    "gulp-webp": "^4.0.1",
    "postcss": "^8.4.20",
    "prettier": "2.8.8",
    "pug-lint": "^2.6.0",
    "sass": "^1.56.2",
    "stylelint": "^15.6.1",
    "stylelint-config-htmlacademy": "^1.1.4",
    "stylelint-config-recommended-scss": "^11",
    "stylelint-order": "^6"
  },
  "peerDependencies": {
    "postcss": "^8.4.20"
  }
